    <link rel="stylesheet" href="/css/master.css">
    <title>Signup</title>
</head>

<body class="container-center">
<%- include('./partials/nav.ejs')%>
    <img class="mb-1" src="/img/loginlogo.png" alt="" width="200" height="200">
    <h2 class="h3 mb-3 font-weight-normal">Register User</h2>
    <form method = "POST" action="/medical-records/signup">
       
        

        <div class="form-group">
            <label for="name" class="sr-only ">Enter Your Full Name</label>
            <input type="text" name="name"  placeholder="Full Name" required>
        </div>

        <div class="form-group">
            <label for="aadharNo" class="sr-only ">Enter Your Aadhar Number</label>
            <input type="text" name="aadharNo" placeholder="Aadhar Number" required>
        </div>

        <div class="form-group">
            <label for="email" class="sr-only w-25" >Enter your email ID(Optional)</label>
            <input type="email" name="email" placeholder="Email ID (Optional)">
        </div>

        <div class="form-group">
            <label for="pin" name="pin"  class="sr-only w-25" >Enter a 4 digit PIN</label>
            <input type="password" name="pin" placeholder="PIN" required>
    
        </div>

        <div class="form-group">
            <label for="cpin" name="cpin"  class="sr-only w-25">Confirm your PIN</label>
            <input type="password" name="cpin" placeholder="Confirm PIN" required>
        </div>

        <input type="submit" class="btn btn-lg btn-primary btn-block">
    </form>
</body>
</html>